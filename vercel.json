{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/config.js",
      "dest": "/_config.js"
    }
  ],
  "build": {
    "env": {
      "PUBLIC_TOKEN": "@public_token" 
    },
    "commands": [
      "echo 'window.__ENV__ = { PUBLIC_TOKEN: \"'$PUBLIC_TOKEN'\" };' > public/_config.js"
    ]
  }
}
